{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css --minify",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public --kv REVIEWS",
    "dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
    "dev": "remix build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "svg:build": "npx @svgr/cli --out-dir app/components/shared/icons --ignore-existing --typescript --  app/components/shared/icons/svgs && eslint app/components/shared/icons --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "tsc": "tsc --noEmit",
    "env": "gen-env-types .env -o app/types/env.d.ts -e . -r .env.test"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^1.0.6",
    "@kodingdotninja/use-tailwind-breakpoint": "^0.0.5",
    "@remix-run/cloudflare": "^1.9.0",
    "@remix-run/cloudflare-pages": "^1.9.0",
    "@remix-run/react": "^1.7.6",
    "@remix-validated-form/with-zod": "^2.0.5",
    "@tailwindcss/line-clamp": "^0.4.2",
    "cross-env": "^7.0.3",
    "flickity": "^3.0.0",
    "framer-motion": "^6",
    "graphql": "^16.5.0",
    "graphql-tag": "^2.12.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.7.1",
    "remix-validated-form": "^4.6.5",
    "tiny-invariant": "^1.3.1",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.18.0",
    "@graphql-codegen/cli": "2.13.12",
    "@graphql-codegen/client-preset": "1.1.4",
    "@graphql-codegen/introspection": "^2.2.1",
    "@graphql-codegen/typescript": "^2.8.2",
    "@graphql-codegen/typescript-generic-sdk": "^2.5.0",
    "@graphql-codegen/typescript-operations": "^2.5.7",
    "@remix-run/dev": "^1.9.0",
    "@remix-run/eslint-config": "^1.9.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.8",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.20.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "form-data": "^4.0.0",
    "gen-env-types": "^1.3.4",
    "node-fetch": "^2.6.7",
    "npm-run-all": "^4.1.5",
    "p-limit": "^3.1.0",
    "plaiceholder": "^2.5.0",
    "postcss": "^8.4.14",
    "prettier": "^2.8.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "readline": "^1.3.0",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.9.3",
    "wrangler": "^2.6.2"
  },
  "engines": {
    "node": ">=14"
  }
}
